{
  "watch": [
    "src/",
    "app.js",
    "server.js",
    ".env"
  ],
  "ignore": [
    "node_modules/",
    "logs/",
    "*.test.js",
    "*.spec.js",
    "coverage/",
    ".git/",
    "README.md"
  ],
  "ext": "js,json",
  "delay": 1000,
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "colours": true
}
